{
  "name": "HashR",
  "version": "21.12.0",
  "private": true,
  "description": "An easy to use file hashing utility working with multiple algorithms.",
  "keywords": [
    "crypto",
    "digest",
    "electron",
    "hashing",
    "node",
    "react",
    "typescript"
  ],
  "homepage": "",
  "bugs": {
    "url": "https://github.com/kobionic/hashr/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kobionic/hashr.git"
  },
  "license": "Apache-2.0",
  "author": "Jeremie Rodriguez <jeremie.rodriguez@kobionic.com> (https://github.com/jeremiergz)",
  "main": "build/electron/index.js",
  "scripts": {
    "build": "run-p clean build:electron build:renderer",
    "build:electron": "tsc --project src/electron",
    "build:renderer": "BUILD_PATH=build/renderer react-scripts build",
    "clean": "rimraf build coverage dist main",
    "eject": "react-scripts eject",
    "lint": "run-p lint:eslint lint:tsc",
    "lint:eslint": "eslint --ext ts,tsx src",
    "lint:tsc": "tsc --noEmit",
    "prepackage": "npm run build",
    "package": "electron-builder -m --x64",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron build/electron",
    "start:w": "BROWSER=none NODE_OPTIONS=--max_old_space_size=4096 react-scripts start renderer",
    "test": "CI=true react-scripts test --coverage --verbose"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "bytes": "3.1.1",
    "electron-serve": "1.1.0",
    "mime": "3.0.0",
    "ms": "2.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@emotion/react": "11.7.0",
    "@emotion/styled": "11.6.0",
    "@kobionic/eslint-config-typescript": "^4.0.3",
    "@kobionic/eslint-config-typescript-react": "^2.0.3",
    "@mui/icons-material": "5.2.0",
    "@mui/material": "5.2.2",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/bytes": "^3.1.1",
    "@types/jest": "^27.0.3",
    "@types/mime": "^2.0.3",
    "@types/ms": "^0.7.31",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.7",
    "eslint": "^8.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "^4.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=16"
  },
  "build": {
    "appId": "com.kobionic.hashr",
    "copyright": "Copyright â’¸ 2021 KoBionic",
    "deb": {
      "packageCategory": "utils"
    },
    "dmg": {
      "background": "resources/background.png",
      "contents": [
        {
          "x": 135,
          "y": 220
        },
        {
          "x": 405,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "extends": null,
    "files": [
      "build/",
      "resources/icon.png"
    ],
    "icon": "resources/icon.png",
    "linux": {
      "category": "Utility",
      "icon": "resources/icon.png",
      "synopsis": "An easy to use file hashing utility working with multiple algorithms.",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap",
        "tar.gz"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": true,
      "runAfterFinish": true
    },
    "productName": "HashR",
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
